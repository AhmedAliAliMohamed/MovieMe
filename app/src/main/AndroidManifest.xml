<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.movieme">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieMe.light"
        tools:targetApi="31">
        <activity
            android:name=".Ui.SignUp.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieMe.light.NoActionBarStatusBar"/>
        <activity
            android:name=".Ui.SignIn.SignInEmailAndPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieMe.light.NoActionBarStatusBar"/>
        <activity
            android:name=".Ui.SignIn.SignInWithAnthorActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieMe.light.NoActionBarStatusBar" />
        <activity
            android:name=".Ui.AppInfoActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieMe.light.NoActionBarStatusBar" />
        <activity
            android:name=".Ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>